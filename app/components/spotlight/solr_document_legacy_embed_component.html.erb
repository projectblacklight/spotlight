<% if body.present? %>
  <%= body %>
<% elsif partials? || embed? %>
  <% partial_content = capture do %>
    <% partials.each do |partial| %>
      <%= partial %>
    <% end %>
  <% end %>

  <%= partial_content if partial_content.present? %>
  <%= embed if embed? && partial_content.blank? %>
<% elsif thumbnail? %>
  <%= thumbnail %>
<% end %>
