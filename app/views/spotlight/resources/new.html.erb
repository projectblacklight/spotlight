<% content_for(:sidebar) do %>
  <%= render 'spotlight/shared/exhibit_sidebar' %>
<% end %>

<%= curation_page_title %>

<%= render Spotlight::TabPanelComponent.new do |component| %>
  <% Spotlight::Engine.config.resource_partials.each_with_index do |p, i| %>
    <% tab_name = p.split('/')[2] %>

    <% component.tab(id: tab_name, label: t("#{p.gsub('/', '.')}.title"), active: @tab == tab_name) do %>
      <%= render p %>
    <% end %>
  <% end %>
<% end %>
