<% content_for(:sidebar) do %>
  <%= render 'spotlight/shared/exhibit_sidebar' %>
<% end %>

<%= configuration_page_title %>

<%= render Spotlight::TabPanelComponent.new do |component| %>
  <% component.tab(id: 'basic', label: t(:'.basic_settings.heading'), active: @tab.blank? || @tab == 'basic') do %>
    <%= render 'form' %>
  <% end %>

  <% if can? :manage, current_exhibit.languages.first_or_initialize %>
    <% component.tab(id: 'language', label: t(:'spotlight.exhibits.languages.heading'), active: @tab == 'language') do %>
      <%=  render 'languages' %>
    <% end %>
  <% end %>

  <% if can? :edit, current_exhibit.filters.first_or_initialize %>
    <% component.tab(id: 'filter', label: t(:'spotlight.exhibits.filter.heading'), active: @tab == 'filter') do %>
      <%= render 'spotlight/filters/form' %>
    <% end %>
  <% end %>

  <% if can? :import, current_exhibit %>
    <% component.tab(id: 'import', label: t(:'spotlight.exhibits.import.heading'), active: @tab == 'import') do %>
      <%= render 'import' %>
    <% end %>
  <% end %>

  <% if can? :export, current_exhibit %>
    <% component.tab(id: 'export', label: t(:'spotlight.exhibits.export.heading'), active: @tab == 'export') do %>
      <%= render 'export' %>
    <% end %>
  <% end %>

  <% if can? :destroy, current_exhibit %>
    <% component.tab(id: 'delete', label: t(:'spotlight.exhibits.delete.heading'), active: @tab == 'delete') do %>
      <%= render 'delete' %>
    <% end %>
  <% end %>
<% end %>
