<% if(document.sidecars.length>0 && document.sidecars.first.compound?) %>
	<%= link_to "Edit Compound Object", edit_exhibit_compound_path({exhibit_id: current_exhibit, id: document.id}) , class: 'pull-right btn btn-primary' if can?(:curate, current_exhibit) and !current_page? [:edit, current_exhibit, document]  %>
<% else %>
	<%= exhibit_edit_link document, [:edit, current_exhibit, document], class: 'pull-right btn btn-primary' if can?(:curate, current_exhibit) and !current_page? [:edit, current_exhibit, document]  %>
<% end %>