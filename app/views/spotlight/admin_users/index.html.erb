<%= page_title(t('.page_title')) %>
<%= bootstrap_form_for Spotlight::Engine.user_class.new, html: { class: 'admin-users' }, url: spotlight.admin_users_path do |f| %>
  <div class="mb-4">
    <h3 class="instructions"><%= t :'.instructions' %></h3>
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col"><%= Spotlight::Engine.user_class.human_attribute_name(:email) %></th>
          <th scope="col"><%= t('.site_admin') %></th>
        </tr>
      </thead>
      <tbody>
        <% @site.roles.map(&:user).each do |user| %>
          <tr>
            <td class="<%= user_badge_classes(user) %>">
              <%= user.email %>
              <span class="badge bg-secondary site-admin-label"><%= t('.site_admin').downcase %></span>
              <span class='badge bg-warning pending-label'><%= t('.pending') %></span>
            </td>
            <td>
              <%= link_to(t('.destroy'), spotlight.admin_user_path(user),
                    data: {
                      method: :delete,
                      turbo_method: :delete,
                      turbo_confirm: t('.destroy_confirm', email: user.email)
                    },
                    class: 'btn btn-sm btn-danger') unless user == current_user %>
            </td>
          </tr>
        <% end %>
        <tr data-edit-for='new'>
          <td>
            <%= f.email_field :email, hide_label: true %>
            <span data-user-role='admin'></span>
          </td>
          <td>
            <div class="form-actions">
              <div class="primary-actions">
              <%= cancel_link f.object, '#', class: 'btn btn-link', role: 'button', data: { behavior: 'cancel-edit' } %>
              <%= f.submit t('.save'), class: 'btn btn-primary'%>
              </div>
            </div>
          </td>
        </tr>
        <tr data-edit-for='new'>
          <td colspan='2'>
          </td>
        </tr>
      </tbody>
    </table>

    <div class="form-actions">
      <div class="primary-actions">
        <%= link_to(t('.create'), 'javascript:;', class: 'btn btn-primary', data: { behavior: 'new-user' }) %>
      </div>
    </div>
  </div>

  <div class="mb-4">
    <h3 class="instructions"><%= t :'.admins_curators' %></h3>
    <div id="admins_curators" class="card card-body bg-light">
      <div class='btn-toolbar align-self-end'>
        <button class="btn btn-sm btn-primary copy-email-addresses" data-clipboard-target="#admins_curators">
            <%= t('.copy') %>
        </button>
      </div>
      <%= Spotlight::Engine.user_class.with_roles.pluck(:email).sort.join(', ') %>
    </div>
  </div>

  <div class="mb-4">
    <h3 class="instructions"><%= t :'.all_users' %></h3>
    <table class="table table-striped ">
      <thead>
        <tr>
          <th scope="col"><%= Spotlight::Engine.user_class.human_attribute_name(:email) %></th>
          <th scope="col"><%= t('.site_admin') %></th>
          <th scope="col"><%= t('.exhibit_roles') %></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td class="user-emails <%= user_badge_classes(user) %>">
              <span class="text-break"><%= user.email %></span>
              <span class="badge bg-secondary site-admin-label"><%= t('.site_admin').downcase %></span>
              <span class="badge bg-warning pending-label"><%= t('.pending') %></span>
            </td>
            <td>
              <% if user.superadmin? %>
                <%= link_to(t('.destroy'), spotlight.admin_user_path(user),
                      data: {
                        method: :delete,
                        turbo_method: :delete,
                        turbo_confirm: t('.destroy_confirm', email: user.email)
                      },
                      class: 'btn btn-sm btn-danger text-nowrap') unless user == current_user %>
              <% else %>
                <%= link_to(t('.update'), spotlight.admin_user_path(user),
                      data: { method: :patch, turbo_method: :patch },
                      class: 'btn btn-sm btn-primary text-nowrap') %>
              <% end %>
            </td>
            <td class="user-exhibit-roles">
              <% sorted_exhibit_roles = sorted_exhibit_roles(user) %>
              <% if sorted_exhibit_roles.present? %>
                <div class="d-flex justify-content-between">
                  <div><%= sorted_exhibit_roles.map { |r| r.role.titleize }.uniq.join(", ") %></div>
                  <div>
                    <%= link_to(t('.remove_roles'), spotlight.remove_exhibit_roles_admin_user_path(user),
                          data: {
                            method: :delete,
                            turbo_method: :delete,
                            turbo_confirm: t('.remove_roles_confirm', email: user.email)
                          },
                          class: 'btn btn-sm btn-danger ms-3 mb-3 text-nowrap') %>
                  </div>
                </div>
                <details>
                  <summary><%= t('.show_exhibit_roles') %></summary>
                  <ul>
                    <% sorted_exhibit_roles.each do |exhibit_role| %>
                      <li>
                        <span class="exhibit-title">
                          <%= link_to(exhibit_role.resource.title, spotlight.exhibit_roles_path(exhibit_role.resource),
                                target: :_blank) %>
                        </span>
                        (<%= exhibit_role.role.titleize %>)
                      </li>
                    <% end %>
                  </ul>
                </details>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<% content_for(:sidebar_position) { 'order-last' } %>
<% content_for(:sidebar) do %>
  <%= render "shared/site_sidebar" %>
<% end %>
