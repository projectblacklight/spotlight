<h3><%= t :'.header' %></h3>

<% unless @pages.empty? %>
  <table class="table table-striped">
  <thead>
    <tr class="d-flex">
      <th class="col-6"><%= t :'.field.title' %></th>
      <th class="col-4"><%= t :'.field.last_edited_by' %></th>
      <th class="col-2"><%= t :'.field.updated_at' %></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: 'page', collection: @pages %>
  </tbody>
  </table>
<% end %>
